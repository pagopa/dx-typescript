{
  "name": "azure-functions-api",
  "version": "0.0.1",
  "description": "Azure Function REST API Template",
  "main": "./dist/main.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "shx rm -rf dist && npm run generate",
    "postbuild": "dependency-check package.json --no-dev --missing ./dist/**/*.js",
    "build": "yarn prebuild && tsc && yarn postbuild",
    "watch": "tsc -w",
    "extensions:install": "func extensions install",
    "start": "dotenv -e .env func start --javascript",
    "dev": "yarn build && yarn start watch",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx --cache",
    "lint-api": "find ./api -name '*.yaml' -exec swagger-cli validate {} \\;",
    "api:bundle": "bundle-api-spec -i api/internal.yaml.template -o api/internal.yaml -V $npm_package_version",
    "generate": "yarn api:bundle && shx rm -rf ./src/generated && yarn generate:definitions-internal",
    "generate:definitions-internal": "shx rm -rf ./src/generated/definitions/internal && shx mkdir -p ./src/generated/definitions/internal && gen-api-models --api-spec ./api/internal.yaml --no-strict --out-dir ./src/generated/definitions/internal "
  },
  "devDependencies": {
    "@pagopa/eslint-config-node": "*",
    "@pagopa/typescript-config-node": "*",
    "@types/express": "^4.17.12",
    "@types/node": "~18.13.0",
    "dependency-check": "^4.1.0",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "shx": "^0.3.2",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^24.3.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@azure/functions": "4.2.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.1",
    "@pagopa/io-functions-commons": "^28.21.0",
    "@pagopa/openapi-codegen-ts": "^13.1.0",
    "@pagopa/ts-commons": "^12.6.0",
    "azure-storage": "^2.10.7",
    "fp-ts": "^2.16.5",
    "io-ts": "^2.2.21"
  }
}
